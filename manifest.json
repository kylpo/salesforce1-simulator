{
    "manifest_version": 2,

    "name": "Salesforce1 Simulator",
    "description": "Launch Salesforce1 in a mobile simulator.",
    "version": "0.0.2",

    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },

    "permissions": [
        "webview",
        "alwaysOnTopWindows"
    ],

    "icons": {
        "16": "salesforce1.png",
        "48": "salesforce1.png",
        "128": "salesforce1.png"
    }
}