{
    "manifest_version": 2,

    "name": "Salesforce1 Simulator",
    "description": "Launch Salesforce1 in a mobile simulator.",
    "version": "0.1.3",

    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },

    "permissions": [
        "webview",
        "alwaysOnTopWindows",
        "storage"
    ],

    "icons": {
        "16": "assets/images/salesforce1.png",
        "48": "assets/images/salesforce1.png",
        "128": "assets/images/salesforce1.png"
    }
}